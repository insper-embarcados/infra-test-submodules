// pulling container-essentials

{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run npm webpack on startup",
        "type": "shell",
        "command": "git submodule init && git submodule add git@github.com:insper-embarcados/container-essencials.git container-essencials && git pull --recurse-submodules",
        "windows": {
          "command": "git submodule init && git submodule add git@github.com:insper-embarcados/container-essencials.git container-essencials && git pull --recurse-submodules"
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "runOptions": { "runOn": "folderOpen" }
      }
    ]
  }